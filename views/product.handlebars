  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>  BACK TO LIST
      </a>
    </div>
  </div>
</nav>

{{!-- Book Information --}}
{{#each books}}
<div class="container">
  <div class="row">
    <div class="col-md-12"><img src="{{this.img_url}}" class="db_image_product" id="bookImage" />
      <h2>{{this.title}}</h2>
      <p>Year: {{this.publish_date}}</p>
      <p>Publisher: {{this.publisher}}</p>
      <p>Role: {{this.role}}</p>
      <p>Characters: {{this.characters}}</p>
      <p>Teams: {{this.teams}}</p>
      <p>Synopsis: {{this.synopsis}}</p>
      <p>Databse ID: {{this.id}}</p>
      {{#if this.Artworks}}
      <p>Artwork is <strong>available</strong></p>
      {{/if}}
      {{#unless this.Artworks}}
      <p>Artwork is <strong>unavailable</strong></p>
      {{/unless}}
    </div>
  </div>
</div>
{{/each}}